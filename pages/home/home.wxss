/* pages/home/home.wxss */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.banner-container, .search-container, .coupon-container {
  width: 100%;
}
.search-container {
  background-color: #b0424a;
  box-sizing: border-box;
  height: 90rpx;
  padding: 10rpx 30rpx 20rpx 30rpx;
}
.search-bar {
  background-color: #fcfcfc;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.search-bar input {
  height: 100%;
  padding: 0 30rpx;
  color: #555;
  font-size: 30rpx;
  text-align: center;
}
.banner-container swiper {
  height: 400rpx;
}
.swiper-item {
  display: block;
  width: 100%;
  height: 100%;
}
.swiper-item-1 {
  background-color: #1AAD19;
}
.swiper-item-2 {
  background-color: #2782D7;
}
.swiper-item-3 {
  background-color: #F1F1F1;
}

.coupon-container {
  padding: 0 20rpx;
  margin-top: 20rpx;
}
.coupon-container scroll-view {
  width: 100%;
  white-space: nowrap;
  height: 80rpx;
}
.scroll-item {
  height: 80rpx;
  width: 232rpx;
  display: inline-block;
  position: relative;
  background-color: #f4f1f2;
  margin-right: 10rpx;
}
.scroll-item:last-child {
  margin-right: 0;
}
.coupon-yuan {
  top: 10rpx; left: 28rpx;
  font-size: 25rpx;
  color: #b0424a;
}
.coupon-num {
  top: 0rpx; left: 45rpx;
  font-size: 60rpx;
  color: #b0424a;
}
.coupon-title {
  top: 12rpx; left: 120rpx;
  font-size: 25rpx;
  color: #666;
}
.coupon-msg {
  top: 43rpx; left: 120rpx;
  font-size: 19.5rpx;
  color: #999;
}
