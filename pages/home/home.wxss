/* pages/home/home.wxss */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #ebebeb;
}
image {
  background-color: rgba(177, 66, 74, 0.071);
}
.banner-container, .search-container, .coupon-container, .type-container, .new-container, .image-container, .ad-container, .show-container {
  position: relative;
  background-color: #fff;
  width: 100%;
}
.coupon-container, .type-container, .new-container {
  padding: 0 20rpx;
  background-color: #fff;
}
.search-container {
  background-color: #b0424a;
  box-sizing: border-box;
  height: 90rpx;
  padding: 10rpx 30rpx 20rpx 30rpx;
}
.search-bar {
  background-color: #fcfcfc;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.search-bar input {
  height: 100%;
  padding: 0 30rpx;
  color: #555;
  font-size: 30rpx;
  text-align: center;
}
.banner-container swiper {
  height: 400rpx;
}
.swiper-item {
  display: block;
  width: 100%;
  height: 100%;
}
.swiper-item-1 {
  background-color: #1AAD19;
}
.swiper-item-2 {
  background-color: #2782D7;
}
.swiper-item-3 {
  background-color: #F1F1F1;
}

.coupon-container {
  padding: 20rpx;
  margin: 20rpx 0;
  background-color: #fff;
}
.coupon-container scroll-view {
  width: 100%;
  white-space: nowrap;
  height: 80rpx;
  margin-bottom: 20rpx;
}
.scroll-item {
  height: 80rpx;
  width: 232rpx;
  display: inline-block;
  position: relative;
  background-color: #f4f1f2;
  margin-right: 10rpx;
}
.scroll-item:last-child {
  margin-right: 0;
}
.scroll-item:active {
  background-color: #e9e9e9;
}
.coupon-yuan {
  top: 10rpx; left: 28rpx;
  font-size: 25rpx;
  color: #b0424a;
}
.coupon-num {
  top: 0rpx; left: 45rpx;
  font-size: 60rpx;
  color: #b0424a;
}
.coupon-title {
  top: 12rpx; left: 120rpx;
  font-size: 25rpx;
  color: #666;
}
.coupon-msg {
  top: 43rpx; left: 120rpx;
  font-size: 19.5rpx;
  color: #999;
}
.coupon-row {
  position: relative;
}
.coupon-left {
  width: 350rpx;
  height: 360rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.card {
  background-color: #f2f2f2;
  position: relative;
}
.card:active {
  background-color: #e9e9e9;
}
.coupon-left .card {
  width: 100%;
  height: 175rpx;
}
.coupon-left .tip {
  position: absolute;
  top: 38rpx; left: 20rpx;
  font-size: 22rpx;
  background:#b0424a;
  color:#eee;
  padding:2rpx 5rpx;
  border-radius:8rpx;
}
.coupon-left .title {
  position: absolute;
  top: 73rpx; left: 20rpx;
  font-size: 32rpx;
}
.coupon-left .abc {
  position: absolute;
  top: 115rpx; left: 20rpx;
  font-size: 19rpx;
  color: #999
}
.card image {
  width: 55%;
  height: 100%;
  float: right;
}
.coupon-right {
  top:0; right:0;
  position:absolute;
  width:350rpx;
  height:360rpx;
  background:#b0424a;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: #fff;
}
.coupon-right:active {
  background:#9e3c42;
}
.coupon-right>text:nth-child(2) {
  font-size: 60rpx;
}
.coupon-right>text:nth-child(3) {
  font-size: 36rpx;
  padding-bottom: 10rpx;
}
.coupon-right>view>text {
  font-size: 25rpx;
  padding:4rpx 23rpx;
  border:1px solid #fff;
}

.type-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-top: 10rpx;
}
.type-container .card {
  width: 350rpx;
  height: 140rpx;
  margin-bottom: 10rpx;
}
.type-container .card .title {
  position: absolute;
  top: 20rpx; left: 25rpx;
  font-size: 28rpx;
}
.type-container .card .abc {
  position: absolute;
  top: 55rpx; left: 25rpx;
  font-size: 20rpx;
  color: #999;
}
.type-container .card .tip {
  position: absolute;
  top: 85rpx; left: 25rpx;
  font-size: 18rpx;
  padding: 3rpx 15rpx;
  background-color: #000;
  color: #eee;
}

.new-container {
  padding-top: 10rpx;
  margin-top: 20rpx;
}
.new-pannel {
  display: flex;
  justify-content: space-between;
}
.new-item {
  width: 230rpx;
  text-align: center;
}
.new-item image {
  display: block;
  width: 230rpx; height: 220rpx;
  background-color:#e9e9e9;
}
.new-item .title {
  display: block;
  font-size: 26rpx;
}
.new-item .money {
  position: relative;
  top: -20rpx;
  display: blcok;
  font-size: 20rpx;
  color: #999;
}
.new-item .tip {
  position: relative;
  top: -18rpx;
  display: block;
  font-size: 18rpx;
}
.new-item .tip text, .ad-text-pannel .tip text {
  padding: 3rpx 12rpx;
  color: #eee;
  background-color: #000;
}
.ad-image {
  width: 100%;
  height: 300rpx;
}
.ad-container {
  width: 100%; height: 250rpx;
  background-color: #fff;
  margin-top: 10rpx;
}
.ad-container image {
  position: absolute;
  top: 0;
  width: 400rpx;
  height: 250rpx;
}
.ad-l image {
  right: 0;
}
.ad-r image {
  left: 0;
}
.ad-text-pannel {
  position: absolute;
  width: 300rpx;
  top: 30rpx;
  text-align: left;
}
.ad-l .ad-text-pannel {
  left: 40rpx;
}
.ad-r .ad-text-pannel {
  left: 420rpx;
}
.ad-text-pannel .title {
  font-size: 36rpx;
  color: #b0424a;
  display: blcok;
  margin-left:-10rpx;
}
.ad-text-pannel .msg {
  display: block;
  margin-top: 15rpx;
  font-size: 25rpx;
  color: #999;
  word-break: break-all;
}
.ad-text-pannel .tip {
  font-size: 18rpx;
  margin-top: 15rpx;
}
.show-container  {
  margin-top: 20rpx;
}
.head {
  width: 100%; height: 30rpx;
  margin-top: 20rpx;
  border-bottom: 1px solid #ddd;
}
.head view:nth-child(1) {
  margin-top: 10rpx;
}
.head>view {
  text-align: center;
  color: #555;
  line-height:30rpx;
}
.head>view>text {
  background-color: #fff;
  font-size: 32rpx;
  padding: 0 50rpx;
}
.head>view:nth-child(2) text {
  font-size: 24rpx;
  color: #999;
}
.goods-pannel {
  padding: 10rpx;
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
}
.goods-item {
  width: 360rpx;
  height: 475rpx;
  margin-bottom: 10rpx;
  background-color: #e9e9e9;
}
.goods-item image {
  width: 100%;
  height: 360rpx;
}
.goods-item .title, .goods-item .foot {
  position: relative;
  padding: 0 15rpx;
  text-align: left;
  line-height: 34rpx;
}
.goods-item .title {
  font-size: 25rpx;
  color: #555;
  height:65rpx;
  word-break: break-all;
}
.goods-item .foot .rmb {
  font-size: 24rpx;
  color: #b0424a;
  margin-right: 15rpx;
}
.goods-item .foot .old-rmb {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}
.goods-item .foot .num {
  position: absolute;
  right: 0; bottom: 1rpx;
  font-size: 22rpx;
  color: #b0424a;
}

.newmore-item {
  width: 236.5rpx;
  height: 236.5rpx;
  margin-bottom: 10rpx;
}
.newmore-item image {
  width: 100%; height: 100%;
}