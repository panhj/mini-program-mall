<!--pages/types/types.wxml-->
<view class="header-container">
  <view class="blur-bg"><image src="/image/banner.jpg"></image></view>
  <view class="header">
    <view class="opacity-bg" style="opacity:{{bgopacity}}"></view>
    <view class="title">
      <text class="type-title">热门分类</text>
    </view>
    <scroll-view scroll-x="true" scroll-left="0">
      <view class="type-item" wx:for="{{types}}" wx:key="unique"><text>{{item.name}}</text></view>
    </scroll-view>
  </view>
  <view class="banner"><image src="/image/banner.jpg"></image></view>
</view>
<view class="content-container">
  <view class="item-pannel" wx:for="{{goods}}" wx:key="unique">
    <view class="img"><image></image></view>
    <view class="title"><text>{{item.name}}</text></view>
    <view class="bot">
      <text class="price">¥ {{item.price}}</text>
      <text class="num">月售：{{item.num}}</text>
    </view>
  </view>
</view>
