/* pages/list/list.wxss */
page {
  background-color: #eee;
}
.search-container {
  position: fixed;
  top: 0; left: 0;
  width: 100%;
  background-color: #b0424a;
}
.input-pannel {
  position: relative;
  margin: 10rpx 30rpx 20rpx 30rpx;
  height: 60rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.input-pannel input {
  background-color: #fff;
  width: 100%; height: 60rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 5rpx 20rpx;
}
.input-pannel .search-icon {
  width: 50rpx; height: 50rpx;
  position: absolute; top: 12rpx; right: 10rpx;
}
.filter-pannel {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
}
.filter-item {
  flex-grow: 1;
  background-color: #fff;
  height: 70rpx; line-height: 70rpx;
  text-align: center;
  color: #777; font-size: 28rpx;
}

.content-container {
  margin-top: 150rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  padding: 20rpx;
}
.item-pannel {
  width: 350rpx;
  padding: 20rpx; margin-bottom: 15rpx;
  border-radius: 15rpx;
  background-color: #fff;
}
.item-pannel .img, .item-pannel .img image {
  width: 310rpx; height: 310rpx;
  background-color: rgba(177, 66, 74, 0.071);
}
.item-pannel .title {
  font-size: 26rpx; line-height: 35rpx; color: #333;
  padding-top: 10rpx;
  text-align: left; text-overflow: ellipsis;
  overflow: hidden;
  max-height: 80rpx;
}
.item-pannel .bot {
  padding-top: 10rpx;
  line-height: 35rpx;
}
.item-pannel .bot .price {
  font-size: 26rpx; color: #b0424a;
}
.item-pannel .bot .num {
  font-size: 22rpx; color: #aaa;
  float: right; padding-top: 2rpx;
}