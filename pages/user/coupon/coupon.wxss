/* pages/user/coupon/coupon.wxss */
page {
  background-color: #eee;
}
.tab-pannel {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-top: 1rpx solid #ddd;
}
.tab-item {
  flex-grow: 1;
  height: 80rpx; line-height: 80rpx;
  font-size: 30rpx; color: #555; 
  text-align: center;
}
.content-container {
  padding: 30rpx;
}
.card {
  position: relative;
  background-color: #fff;
  margin-left: 245rpx;
  margin-bottom: 20rpx;
  height: 200rpx;
}
.card .image, .card .image-text {
  position: absolute;
  width: 245rpx; height: 200rpx;
  top: 0; left: -245rpx;
}
.card .image image {
  width: 250rpx; height: 200rpx;
}
.card .image-text .num {
  font-size: 70rpx; color: #fff; text-align: center;
  padding-top: 35rpx;
}
.card .image-text .usenow {
  font-size: 26rpx; color: #fff;
  text-align: center;
  padding-top: 20rpx;
}
.card .cannotuse {
  position: absolute;
  top: 10rpx; left: 30rpx;
  width: 148rpx; height: 148rpx;
  border: 6rpx solid #ccc;
  border-radius: 148rpx;
  padding: 10rpx;
  transform: rotateZ(-18deg);
}
.card .cannotuse>view {
  border: 4rpx dashed #ccc;
  width: 118rpx; height: 118rpx;
  border-radius: 118rpx;
  font-size: 30rpx; line-height: 110rpx; text-align: center; color: #ccc;
}
.card .text-pannel {
  text-align: right;
  padding: 20rpx 40rpx;
}
.card .text-pannel .title {
  font-size: 40rpx; color: #333;
}
.card .text-pannel .usespace {
  font-size: 30rpx; color: #999;
  line-height: 55rpx;
}
.card .text-pannel .date {
  font-size: 24rpx; color: #999;
  padding-top: 28rpx;
}