/* pages/user/user.wxss */
page {
  background-color: #eee;
}
.header {
  position: relative;
  width: 100%;
  background-color: #b0424a;
  padding: 110rpx 0 10rpx 0;
}
.header .head-image {
  width: 150rpx; height: 150rpx;
  border-radius: 150rpx;
  margin: 0 auto;
  overflow: hidden;
}
.header .head-image, .head-image image {
  width: 150rpx; height: 150rpx;
}
.header .user-name {
  text-align: center;
  font-size: 32rpx; color: #fff; line-height: 100rpx;
}
.collect-bar {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 20rpx 0;
}
.collect-bar .like {
  flex-grow: 1;
  text-align: center;
  font-size: 28rpx; line-height: 45rpx; color: #666;
}
.collect-bar .like .num {
  font-size: 34rpx; color: #b0424a;
}
.blank-35 {
  height: 35rpx;
}
.list-item {
  position: relative;
  background-color: #fff;
}
.list-item .content {
  height: 90rpx; line-height: 90rpx;
  margin: 0 110rpx;
  font-size: 30rpx; color:#555;
}
.list-item .icon-left,  .list-item .icon-right {
  width: 110rpx; height: 90rpx; line-height: 90rpx;
  text-align: center;
  position: absolute; top: 0;
}
.icon-left .iconfont {
  font-size: 38rpx;
}
.list-item .icon-left {
  left: 0;
}
.list-item .icon-right {
  right: 0
}
.list-border-b .content, .list-border-b .icon-right{
  border-bottom: 1rpx solid #eee;
}
.phone-pannel {
  height: 90rpx; line-height: 90rpx;
  background-color: #fff;
  text-align: center;
  font-size: 30rpx; color:#555;
}